{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tobrojekt.dev/schemas/project.schema.json",
  "title": "Project",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "slug", "title", "summary", "visibility"],
  "properties": {
    "id": { "type": "string", "minLength": 1, "description": "Stable unique identifier (do not reuse)." },
    "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$", "description": "Lowercase, hyphenated ASCII; stable and unique." },
    "title": { "type": "string", "minLength": 1 },
    "summary": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "status": { "type": "string", "enum": ["planned", "active", "completed", "archived"], "default": "active" },
    "tags": { "type": "array", "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }, "uniqueItems": true, "default": [] },
    "categories": { "type": "array", "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }, "uniqueItems": true, "default": [] },
    "roles": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
    "skills": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
    "links": { "type": "array", "items": { "$ref": "#/definitions/link" }, "default": [] },
    "media": { "$ref": "#/definitions/media" },
    "dates": { "$ref": "#/definitions/dates" },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "stars": { "type": "number", "minimum": 0 },
        "downloads": { "type": "number", "minimum": 0 },
        "users": { "type": "number", "minimum": 0 }
      }
    },
    "featured": { "type": "boolean", "default": false },
    "priority": { "type": "integer", "minimum": 0 },
    "visibility": { "type": "string", "enum": ["public", "private"] }
  },
  "definitions": {
    "link": {
      "type": "object",
      "additionalProperties": false,
      "required": ["url"],
      "properties": {
        "rel": { "type": "string", "enum": ["source", "demo", "docs", "related", "other"], "default": "other" },
        "label": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "required": ["src", "alt"],
      "properties": {
        "src": { "type": "string", "format": "uri-reference" },
        "alt": { "type": "string" },
        "width": { "type": "integer", "minimum": 1 },
        "height": { "type": "integer", "minimum": 1 }
      }
    },
    "media": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "social_card": { "$ref": "#/definitions/image" },
        "images": { "type": "array", "items": { "$ref": "#/definitions/image" }, "default": [] }
      }
    },
    "dates": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "created": { "type": "string", "format": "date" },
        "updated": { "type": "string", "format": "date" },
        "started": { "type": "string", "format": "date" },
        "completed": { "type": "string", "format": "date" }
      }
    }
  }
}
