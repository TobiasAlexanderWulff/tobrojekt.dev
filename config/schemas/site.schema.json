{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tobrojekt.dev/schemas/site.schema.json",
  "title": "SiteMetadata",
  "type": "object",
  "additionalProperties": false,
  "required": ["siteName", "owner"],
  "properties": {
    "siteName": { "type": "string" },
    "tagline": { "type": "string" },
    "description": { "type": "string" },
    "owner": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "email": { "type": "string", "format": "email" },
        "social": { "type": "array", "items": { "$ref": "#/definitions/socialLink" }, "default": [] }
      }
    },
    "primaryNavigation": { "type": "array", "items": { "$ref": "#/definitions/navItem" }, "default": [] },
    "socialLinks": { "type": "array", "items": { "$ref": "#/definitions/socialLink" }, "default": [] }
  },
  "definitions": {
    "navItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "href"],
      "properties": {
        "label": { "type": "string" },
        "href": { "type": "string" }
      }
    },
    "socialLink": {
      "type": "object",
      "additionalProperties": false,
      "required": ["platform", "url"],
      "properties": {
        "platform": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      }
    }
  }
}
