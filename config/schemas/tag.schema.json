{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tobrojekt.dev/schemas/tag.schema.json",
  "title": "Tag",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "label"],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$", "description": "Slug-style identifier for the tag/category." },
    "label": { "type": "string" },
    "description": { "type": "string" }
  }
}
