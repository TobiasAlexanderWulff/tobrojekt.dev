---
import Base from "~/layouts/Base.astro";
import { getCollection } from 'astro:content';

const all = await getCollection('projects');
const projects = all
  .filter((p) => p.data.visibility !== 'private')
  .sort((a, b) => (a.data.priority ?? 999) - (b.data.priority ?? 999));
---
<Base title="Projects â€“ tobrojekt.dev" description="All public projects">
  <section class="container py-10">
    <h1 class="text-3xl font-bold mb-6">Projects</h1>
    <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((p) => (
        <li class="p-4 border rounded hover:shadow-sm transition">
          <a href={`/projects/${p.slug}`} class="block">
            <h3 class="font-semibold">{p.data.title}</h3>
            <p class="text-slate-700 text-sm">{p.data.summary}</p>
            {p.data.tags?.length ? (
              <div class="mt-2 flex flex-wrap gap-2">
                {p.data.tags.map((t) => (
                  <a href={`/tags/${t}`} class="text-xs bg-slate-100 px-2 py-1 rounded">{t}</a>
                ))}
              </div>
            ) : null}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Base>

